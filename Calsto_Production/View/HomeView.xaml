<Window x:Class="HomeView"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        mc:Ignorable="d"
        Title="HomeView" 
        Height="900" Width="1350"
        WindowStartupLocation="CenterScreen"
        Background="#F5F5F5"
        WindowState="Maximized">
    <Window.Resources>
        <LinearGradientBrush x:Key="HeaderGradient" StartPoint="0,0" EndPoint="1,1">
            <GradientStop Color="LightGray" Offset="0"/>
            <GradientStop Color="white" Offset="1"/>
        </LinearGradientBrush>

        <DropShadowEffect x:Key="ModernShadow" BlurRadius="10" ShadowDepth="1" Color="#33000000"/>

        <Style x:Key="ModernIconButton" TargetType="Button">
            <Setter Property="Background" Value="#4CFFFFFF"/>
            <Setter Property="Foreground" Value="#05485E"/>
            <Setter Property="BorderBrush" Value="#20FFFFFF"/>
            <Setter Property="BorderThickness" Value="0"/>
            <Setter Property="FontSize" Value="17"/>
            <Setter Property="FontWeight" Value="SemiBold"/>
            <Setter Property="Padding" Value="0"/>
            <Setter Property="Width" Value="42"/>
            <Setter Property="Height" Value="42"/>
            <Setter Property="Cursor" Value="Hand"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border Background="{TemplateBinding Background}"
                                CornerRadius="21"
                                BorderBrush="{TemplateBinding BorderBrush}"
                                BorderThickness="{TemplateBinding BorderThickness}">
                            <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                        </Border>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
            <Style.Triggers>
                <Trigger Property="IsMouseOver" Value="True">
                    <Setter Property="Background" Value="#88E1F3F9"/>
                    <Setter Property="BorderBrush" Value="#FF0088AA"/>
                </Trigger>
                <Trigger Property="IsPressed" Value="True">
                    <Setter Property="Background" Value="#FF0088AA"/>
                    <Setter Property="Foreground" Value="#FFFFFF"/>
                </Trigger>
            </Style.Triggers>
        </Style>
    </Window.Resources>

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="30"/>
            <RowDefinition/>
        </Grid.RowDefinitions>

        <!-- HEADER -->
        <Border Grid.Row="0" Background="Transparent" CornerRadius="0,0,28,28" Effect="{StaticResource ModernShadow}">
            <Border Background="{StaticResource HeaderGradient}" CornerRadius="0,0,28,28">
                <Grid>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="Auto"/>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="Auto"/>
                    </Grid.ColumnDefinitions>

                    <!-- Left Logo -->
                    <StackPanel Grid.Column="0" Orientation="Horizontal" VerticalAlignment="Center" Margin="22,0,0,0">
                        <Image Source="/Resources/CALSTO-NEW.png" Width="110" Height="22" Margin="0,0,10,0"/>
                    </StackPanel>

                    <!-- Title -->
                    <StackPanel Grid.Column="1" Orientation="Horizontal" VerticalAlignment="Center" HorizontalAlignment="Left">
                        <TextBlock Text="PRODUCTION TRACKER (PU4)" FontFamily="Calibri" FontWeight="Bold" FontSize="20" Foreground="#FF0088AA" Margin="15,0,0,2"/>
                    </StackPanel>

                    <!-- User + Tools -->
                    <StackPanel Grid.Column="2" Orientation="Horizontal" VerticalAlignment="Center" HorizontalAlignment="Right" Margin="0,0,24,0">

                        <!-- Avatar -->
                        <Ellipse Width="20" Height="20" Margin="0,0,8,0" Stroke="#E0F7FA" StrokeThickness="1.1">
                            <Ellipse.Fill>
                                <ImageBrush ImageSource="/Resources/profile (1).png"/>
                            </Ellipse.Fill>
                        </Ellipse>

                        <!-- Username -->
                        <TextBlock x:Name="loggeduser" Text="User" FontSize="11" FontWeight="SemiBold" Foreground="#FF540F0F" VerticalAlignment="Center" Margin="0,0,10,0"/>

                        <!-- Company Logo -->
                        <Image Width="100" Height="28" Stretch="Uniform" VerticalAlignment="Center" Source="/Resources/CA_Storage_Logo-removebg-preview.png"/>

                        <!-- Logout Button -->
                    </StackPanel>
                </Grid>
            </Border>
        </Border>

        <!-- TAB SECTION -->
        <Grid Grid.Row="1">
            <Border Margin="5" Background="White"  BorderBrush="#E0E0E0" BorderThickness="1" Effect="{StaticResource ModernShadow}">
                <TabControl x:Name="HomeTabControl" Background="Transparent" BorderThickness="0" Padding="6" Margin="0,0,-5,0" FontFamily="Segoe UI" FontSize="15">
                    <TabItem x:Name="TabDashboard" Header="DASHBOARD" FontSize="9" FontWeight="Bold">
                        <Frame Source="Pages/Dashboard.xaml" NavigationUIVisibility="Hidden"/>
                    </TabItem>
                    <TabItem x:Name="TabPlanning" Header="PLANNING" FontSize="9" FontWeight="Bold">
                        <Frame Source="Pages/Planning.xaml" NavigationUIVisibility="Hidden"/>
                    </TabItem>
                    <TabItem x:Name="TabForming" Header="FORMING" FontSize="9" FontWeight="Bold">
                        <Frame Source="Pages/Forming.xaml" NavigationUIVisibility="Hidden"/>
                    </TabItem>
                    <TabItem x:Name="TabWelding" Header="WELDING" FontSize="9" FontWeight="Bold">
                        <Frame Source="Pages/Welding.xaml" NavigationUIVisibility="Hidden"/>
                    </TabItem>
                    <TabItem x:Name="TabLaser" Header="LASER" FontSize="9" FontWeight="Bold">
                        <Frame Source="Pages/Welding.xaml" NavigationUIVisibility="Hidden"/>
                    </TabItem>
                    <TabItem x:Name="TabCoating" Header="COATING" FontSize="9" FontWeight="Bold">
                        <Frame Source="Pages/Coating.xaml" NavigationUIVisibility="Hidden"/>
                    </TabItem>
                    <TabItem x:Name="TabOsp" Header="OSP" FontSize="9" FontWeight="Bold">
                        <Frame Source="Pages/OSP.xaml" NavigationUIVisibility="Hidden"/>
                    </TabItem>
                    <TabItem x:Name="TabStores" Header="STORES" FontSize="9" FontWeight="Bold">
                        <Frame Source="Pages/Stores.xaml" NavigationUIVisibility="Hidden"/>
                    </TabItem>
                    <TabItem x:Name="TabInventory" Header="INVENTORY" FontSize="9" FontWeight="Bold">
                        <Frame Source="Pages/Inventory.xaml" NavigationUIVisibility="Hidden"/>
                        
                    </TabItem>
                    <TabItem x:Name="TabPacking" Header="PACKING" FontSize="9" FontWeight="Bold">
                        <Frame Source="Pages/Packing.xaml" NavigationUIVisibility="Hidden"/>
                    </TabItem>
                    <TabItem x:Name="TabDispatch" Header="DISPATCH" FontSize="9" FontWeight="Bold">
                        <Grid Background="White"/>
                    </TabItem>
                </TabControl>
            </Border>
        </Grid>
    </Grid>
</Window>
