<Window x:Class="LoginView"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Login"
        WindowStartupLocation="CenterScreen"
        ResizeMode="NoResize"
        Width="400" Height="600"
        WindowStyle="None"
        AllowsTransparency="True"
        Background="Transparent">

    <Window.Resources>
        <!-- Gradient Background -->
        <LinearGradientBrush x:Key="BackgroundGradient" StartPoint="0,0" EndPoint="0,1">
            <!-- Alpha 0.8 (~80% opacity) -->
            <GradientStop Color="#332C3E50" Offset="0"/>
            <GradientStop Color="#4d34495E" Offset="1"/>
        </LinearGradientBrush>

        <!-- Rounded Button Style -->
        <Style x:Key="RoundedButtonStyle" TargetType="Button">
            <Setter Property="Background" Value="#3498DB"/>
            <Setter Property="Foreground" Value="White"/>
            <Setter Property="FontWeight" Value="SemiBold"/>
            <Setter Property="FontSize" Value="14"/>
            <Setter Property="BorderThickness" Value="0"/>
            <Setter Property="Cursor" Value="Hand"/>
            <Setter Property="Height" Value="40"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border Background="{TemplateBinding Background}" 
                                CornerRadius="8" 
                                SnapsToDevicePixels="True">
                            <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                        </Border>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
            <Style.Triggers>
                <Trigger Property="IsMouseOver" Value="True">
                    <Setter Property="Background" Value="#2980B9"/>
                </Trigger>
                <Trigger Property="IsPressed" Value="True">
                    <Setter Property="Background" Value="#1C5980"/>
                </Trigger>
            </Style.Triggers>
        </Style>
    </Window.Resources>

    <Grid Background="{StaticResource BackgroundGradient}">
        <!-- Login Card -->
        <Border Width="320" Height="500" Background="White" CornerRadius="16"
                VerticalAlignment="Center" HorizontalAlignment="Center"
                Padding="24" >
            <StackPanel>

                <Image Source="pack://application:,,,/Resources/CALSTO-NEW.png"
           Width="120" Height="40" HorizontalAlignment="Center" Margin="0,0,0,12"/>



                <!-- Header -->
                <TextBlock Text="Welcome" FontSize="22" FontWeight="Bold" 
                           Foreground="#2C3E50" HorizontalAlignment="Center"/>


                <!-- Username -->
                <TextBlock Text="Username" FontSize="12" Foreground="#7F8C8D"/>
                <TextBox x:Name="txtUsername" Height="32" FontSize="12"
                         Background="#ECF0F1" BorderThickness="0" Margin="0,4,0,12"
                         Padding="8" />

                <!-- Password -->
                <TextBlock Text="Password" FontSize="12" Foreground="#7F8C8D"/>
                <Grid Margin="0,4,0,8">
                    <PasswordBox x:Name="txtPassword" Height="32" FontSize="12"
                                 Background="#ECF0F1" BorderThickness="0" Padding="8"/>
                    
                    <Button x:Name="btnTogglePassword" Content="👁️" Width="28" Height="28"
                            HorizontalAlignment="Right" VerticalAlignment="Center"
                            Background="Transparent" BorderThickness="0"
                            Cursor="Hand" Click="btnTogglePassword_Click"/>
                </Grid>

                <!-- Caps Lock -->
                <TextBlock x:Name="lblCapsLock" Text="Caps Lock is ON" Foreground="Red"
                           FontSize="10" Visibility="Collapsed" Margin="0,0,0,8"/>

                <!-- Error -->
                <TextBlock x:Name="lblError" Text="" Foreground="Red" FontSize="11" Margin="0,0,0,8"/>

                <!-- Login Button -->
                <Button x:Name="btnLogin" Content="Log In" Style="{StaticResource RoundedButtonStyle}" />

                <!-- Forgot Password -->
                <TextBlock Text="Forgot Password?" FontSize="11" Foreground="#2980B9"
                           HorizontalAlignment="Center" Margin="0,12,0,50"
                           Cursor="Hand" TextDecorations="Underline"/>

                

                <Image Source="pack://application:,,,/Resources/CA_Storage_Logo-removebg-preview.png"
Width="120" Height="50" HorizontalAlignment="Center" Margin="0,0,0,0"/>


                <StackPanel Orientation="Horizontal" VerticalAlignment="Center" Height="20" Margin="0,11,0,0" HorizontalAlignment="Center">
                    <Ellipse x:Name="dbStatusIndicator" Height="10" Width="10" Fill="Red" Margin="0,0,0,0"/>
                    <TextBlock x:Name="dbStatusText" Text="Not Connected"
FontSize="11" Foreground="#888"
Margin="6,0,0,0" />
                </StackPanel>
            </StackPanel>
        </Border>

      
        
        <!-- Close Button -->
        <Button x:Name="label" Content="❌" Width="32" Height="32" HorizontalAlignment="Right" VerticalAlignment="Top" 
                Margin="0,10,10,0" Background="Transparent" BorderThickness="0"
                Foreground="#E74C3C" FontSize="16" Click="btnClose_Click"/>
    </Grid>
</Window>
