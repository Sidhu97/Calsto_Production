<Window x:Class="LoginView"
         xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Calsto_Production"
        Title="Login"
        WindowStartupLocation="CenterScreen"
        ResizeMode="NoResize"
        Width="750" Height="450"
        WindowStyle="None"
        AllowsTransparency="True"
        Background="Transparent"
        Loaded="Window_Loaded">

    <Window.Resources>
        <LinearGradientBrush x:Key="loginGradient" StartPoint="0.5,0" EndPoint="0.5,1">
            <GradientStop Color="#FF232D37" Offset="0"/>
            <GradientStop Color="#FF408399" Offset="1"/>
        </LinearGradientBrush>
        <Style x:Key="RoundedButtonStyle" TargetType="{x:Type Button}">
            <Setter Property="Background" Value="#1C809C"/>
            <Setter Property="Foreground" Value="White"/>
            <Setter Property="FontWeight" Value="SemiBold"/>
            <Setter Property="FontSize" Value="13"/>
            <Setter Property="BorderThickness" Value="0"/>
            <Setter Property="Cursor" Value="Hand"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="{x:Type Button}">
                        <Border Background="{TemplateBinding Background}" CornerRadius="6" SnapsToDevicePixels="True">
                            <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                        </Border>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
            <Style.Triggers>
                <Trigger Property="IsMouseOver" Value="True">
                    <Setter Property="Background" Value="#156B82"/>
                </Trigger>
                <Trigger Property="IsPressed" Value="True">
                    <Setter Property="Background" Value="#104E5F"/>
                </Trigger>
            </Style.Triggers>
        </Style>
    </Window.Resources>

    <Grid>
        <Border CornerRadius="22" Margin="2"  >
            <!--Background="{StaticResource loginGradient}"-->
            <Grid>
                <!-- Left Gradient Panel --><!--
                <Border CornerRadius="20"
                        Width="337" Height="396"
                        HorizontalAlignment="Left"
                        VerticalAlignment="Top"
                        BorderBrush="#3C4247"
                        BorderThickness="1.2" Margin="-454,36,0,0">
                    <Border.Background>
                        <LinearGradientBrush StartPoint="0.5,0" EndPoint="0.5,1">
                            <GradientStop Color="#FF232D37" Offset="0"/>
                            <GradientStop Color="#FF408399" Offset="1"/>
                        </LinearGradientBrush>
                    </Border.Background>
                    <Border.Effect>
                        <DropShadowEffect BlurRadius="12" ShadowDepth="0" Color="#28000000"/>
                    </Border.Effect>
                </Border>-->

                <!-- Right Login Card -->
                <Image x:Name="image"  HorizontalAlignment="Center" VerticalAlignment="Center" Source="/Resources/LoginView.png" Stretch="Fill" IsEnabled="False"/>
                <Border CornerRadius="24"
                        Background="White"
                        Width="304" Height="410"
                        Padding="24"
                        HorizontalAlignment="Left"
                        VerticalAlignment="Center"
                        Margin="30,0,0,0">
                    

                    <Grid Margin="-9,-2,-8,0">
                        <Grid.RowDefinitions>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="Auto" MinHeight="45"/>
                            <RowDefinition Height="61"/>
                            <RowDefinition/>
                        </Grid.RowDefinitions>

                        <!-- Header + Username + Password -->
                        <StackPanel Grid.Row="0" Margin="0,0,0,12">
                            <TextBlock Text="Welcome Back!"
                                       FontSize="22"
                                       FontWeight="Bold"
                                       Foreground="#232D37"
                                       Margin="0,0,0,4"/>
                            <TextBlock Text="Login to continue"
                                       FontSize="14"
                                       Foreground="#6F7B8A"
                                       Margin="0,0,0,16"/>

                            <!-- Username -->
                            <TextBlock Text="Username" Foreground="#8A8A8A" FontSize="12" Margin="0,0,0,4"/>
                            <Border Background="#F5F7FA"
                                    Height="30"
                                    CornerRadius="8"
                                    Margin="0,0,0,8"
                                    BorderBrush="#E0E0E0"
                                    BorderThickness="0.5">
                                <Border.Effect>
                                    <DropShadowEffect BlurRadius="5" ShadowDepth="0" Color="#20000000"/>
                                </Border.Effect>
                                <DockPanel LastChildFill="True">
                                    <TextBlock Text="👤"
                                               FontSize="14"
                                               VerticalAlignment="Center"
                                               Margin="10,0"/>
                                    <TextBox x:Name="txtUsername"
                                             VerticalContentAlignment="Center"
                                             Background="Transparent"
                                             BorderThickness="0"
                                             FontSize="12"
                                             Foreground="#232D37"
                                             Padding="4,0" Height="30"/>
                                </DockPanel>
                            </Border>

                            <!-- Password -->
                            <TextBlock Text="Password"
                                       Foreground="#8A8A8A"
                                       FontSize="12"
                                       Margin="0,0,0,4"/>
                            <Border Background="#F5F7FA"
                                    Height="30"
                                    CornerRadius="8"
                                    Margin="0,0,0,8"
                                    BorderBrush="#E0E0E0"
                                    BorderThickness="1">
                                <Border.Effect>
                                    <DropShadowEffect BlurRadius="5" ShadowDepth="0" Color="#20000000"/>
                                </Border.Effect>
                                <DockPanel>
                                    <TextBlock Text="🔒"
                                               FontSize="14"
                                               VerticalAlignment="Center"
                                               Margin="10,0"/>
                                    <PasswordBox x:Name="txtPassword"
                                                 VerticalContentAlignment="Center"
                                                 Background="Transparent"
                                                 BorderThickness="0"
                                                 FontSize="12"
                                                 Foreground="#232D37"
                                                 Width="183"
                                                 Padding="4,0" Height="28"
                                                 PreviewKeyDown="txtPassword_PreviewKeyDown"
                                                 GotFocus="txtPassword_GotFocus"/>
                                    <Button x:Name="btnTogglePassword"
                                            Content="👁️"
                                            FontSize="12"
                                            Background="Transparent"
                                            BorderThickness="0"
                                            Cursor="Hand"
                                            ToolTip="Show/Hide Password"
                                            Margin="4,0"
                                            Click="btnTogglePassword_Click"/>
                                </DockPanel>
                            </Border>

                            <!-- Caps Lock -->
                            <TextBlock x:Name="lblCapsLock"
                                       Text="Caps Lock is ON"
                                       Foreground="#E74C3C"
                                       FontSize="10"
                                       Visibility="Collapsed"
                                       Margin="0,0,0,8"/>
                        </StackPanel>

                        <!-- Error & Forgot Password -->
                        <Grid Grid.Row="1" Margin="0,0,0,12">
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="*"/>
                                <ColumnDefinition Width="Auto"/>
                            </Grid.ColumnDefinitions>
                            <TextBlock x:Name="lblError"
                                       Foreground="#E74C3C"
                                       FontSize="10"
                                       Margin="0,2,78,2" Grid.Column="0" Grid.ColumnSpan="2"/>
                            <TextBlock x:Name="txtForgotPassword"
                                       Text="Forgot password?"
                                       Foreground="#6F7B8A"
                                       FontSize="8"
                                       Cursor="Hand"
                                       TextDecorations="Underline"
                                       VerticalAlignment="Center"
                                       HorizontalAlignment="Center"
                                       Grid.Column="1"
                                       MouseLeftButtonUp="txtForgotPassword_MouseLeftButtonUp"/>
                        </Grid>

                        <!-- Login Button -->
                        <Button Grid.Row="2"
                                x:Name="btnLogin"
                                Content="Log in"
                                Width="261"
                                HorizontalAlignment="Center"
                                Background="#1C809C"
                                Foreground="White"
                                FontWeight="SemiBold"
                                FontSize="14"
                                Cursor="Hand"
                                Margin="0,6,0,6"
                                BorderThickness="0"
                                Click="btnLogin_Click"
                                Style="{StaticResource RoundedButtonStyle}"/>

                        <!-- Update Info -->
                        <TextBlock x:Name="lblUpdate"
                                   Visibility="Visible"
                                   Grid.Row="3"
                                   FontSize="10"
                                   Foreground="#009688"
                                   Margin="6,4,0,40" FontWeight="SemiBold" TextAlignment="Center" HorizontalAlignment="Left"><Run Text="🔔 Update Available : "/><Run Text=" "/><Run Text="Click to install."/></TextBlock>

                        <!-- Admin Info -->
                        <TextBlock Text="For any assistance contact admin"
                                   FontSize="10"
                                   Foreground="#8A8A8A" Margin="6,43,82,0" Grid.Row="3"/>
                        <StackPanel Margin="6,0,0,0" Orientation="Horizontal" Grid.Row="4" VerticalAlignment="Center" Height="15">
                            <TextBlock Text="CALSTO :" FontSize="9" Foreground="#8A8A8A" Height="15" Width="40"/>
                            <TextBlock x:Name="lblVersion" FontSize="9" Foreground="#8A8A8A" Height="15" Width="35"/>
                            <Ellipse x:Name="dbStatusIndicator"
                                Height="10"
                                Fill="Red"
                                 Width="10" Margin="100,0,0,0"/>
                            <TextBlock x:Name="dbStatusText"
                                Text="Not Connected"
                                FontSize="9"
                                Foreground="#8A8A8A"
                                Height="15" Width="65" Margin="5,0,0,0"/>
                        </StackPanel>
                    </Grid>
                </Border>
                <Label x:Name="label" Content="❌" HorizontalAlignment="Left" Margin="285,36,0,0" VerticalAlignment="Top" Background="{x:Null}" Foreground="#FFEB2A13" MouseDown="label_MouseDown"/>
                <Grid x:Name="spinner" Background="#80000000" Visibility="Collapsed" VerticalAlignment="Stretch" HorizontalAlignment="Stretch" >
                    <TextBlock Text="Logging in..." Foreground="White" FontSize="18" HorizontalAlignment="Center" VerticalAlignment="Center"/>
                </Grid>
            </Grid>
            
        </Border>
    </Grid>
</Window>
