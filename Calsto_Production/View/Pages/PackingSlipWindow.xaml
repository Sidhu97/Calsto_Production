<Window x:Class="PackingSlipWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Packing Slip" Height="800" Width="600">

    <DockPanel>
        <!-- Custom Print Button -->
        <StackPanel DockPanel.Dock="Top" Orientation="Horizontal" HorizontalAlignment="Right" Margin="5">
            <Button Name="BtnPrint" Content="Print" Width="100" Height="30" Margin="5" />
        </StackPanel>

        <!-- FlowDocumentReader with toolbar visible -->
        <FlowDocumentReader Name="DocViewer" ViewingMode="Page"/>
    </DockPanel>
</Window>
