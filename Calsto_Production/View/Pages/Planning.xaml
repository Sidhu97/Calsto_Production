<Page
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:control="clr-namespace:FilterDataGrid;assembly=FilterDataGrid"
     xmlns:local="clr-namespace:TACKERCALSTO.Converters"
      xmlns:av="http://schemas.microsoft.com/expression/blend/2008" xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" mc:Ignorable="av" x:Class="Planning "
      Title="Planning" Background="#FAFAFA" FontFamily="Segoe UI" FontSize="11" av:DesignHeight="594.701">

    <Page.Resources>


        <local:JobCardToEnabledConverter x:Key="JobCardToEnabledConverter"/>
        <!-- Header style -->
        <Style x:Key="HeaderStyle" TargetType="{x:Type DataGridColumnHeader}">
            <Setter Property="FontWeight" Value="SemiBold"/>
            <Setter Property="FontSize" Value="11"/>
            <Setter Property="Background" Value="#F5F7FA"/>
            <Setter Property="Foreground" Value="#333"/>
            <Setter Property="HorizontalContentAlignment" Value="Left"/>
            <Setter Property="Padding" Value="8,4"/>
            <Setter Property="BorderThickness" Value="0,0,0,1"/>
            <Setter Property="BorderBrush" Value="#DBE2E8"/>
        </Style>

        <!-- Row style without unconditional background -->
        <Style x:Key="RowStyle" TargetType="{x:Type DataGridRow}">
            <Setter Property="FontSize" Value="11"/>
            <Setter Property="Foreground" Value="#222"/>
            <Setter Property="MinHeight" Value="22"/>
            <Setter Property="Padding" Value="6,2"/>
            <Style.Triggers>
                <Trigger Property="IsSelected" Value="True">
                    <Setter Property="Background" Value="LightBlue"/>
                    <Setter Property="Foreground" Value="White"/>
                </Trigger>
                <Trigger Property="IsMouseOver" Value="True">
                    <Setter Property="Background" Value="LightBlue"/>
                </Trigger>
            </Style.Triggers>
        </Style>

        <!-- Cell text style with trimming -->
        <Style x:Key="CellTextStyle" TargetType="{x:Type TextBlock}">
            <Setter Property="Padding" Value="6,0"/>
            <Setter Property="VerticalAlignment" Value="Center"/>
            <Setter Property="TextTrimming" Value="CharacterEllipsis"/>
            <Setter Property="Foreground" Value="#444"/>
        </Style>

        <!-- Highlight blue for ProjectStatus Open -->
        <Style x:Key="ProjectStatusStyle" TargetType="{x:Type TextBlock}" BasedOn="{StaticResource CellTextStyle}">
            <Style.Triggers>
                <DataTrigger Binding="{Binding ProjectStatus}" Value="OPEN">
                    <Setter Property="Foreground" Value="Green"/>
                    <Setter Property="FontWeight" Value="Bold"/>
                </DataTrigger>
                <DataTrigger Binding="{Binding ProjectStatus}" Value="HOLD">
                    <Setter Property="Foreground" Value="RED"/>
                    <Setter Property="FontWeight" Value="SemiBold"/>
                </DataTrigger>
                <DataTrigger Binding="{Binding ProjectStatus}" Value="CLOSED">
                    <Setter Property="Foreground" Value="PURPLE"/>
                    <Setter Property="FontWeight" Value="SemiBold"/>
                </DataTrigger>
            </Style.Triggers>
        </Style>
    </Page.Resources>

    <Grid Margin="16">
        <Grid.ColumnDefinitions>
            <ColumnDefinition/>
            <ColumnDefinition Width="10"/>
            <ColumnDefinition Width="4.5*"/>
        </Grid.ColumnDefinitions>
        <!-- Master Data Grid -->
        <control:FilterDataGrid 
            x:Name="MasterDG"
            ItemsSource="{Binding PlannigList}"
            AutoGenerateColumns="False"
            CanUserAddRows="False"
            SelectedItem="{Binding SelectedProj, Mode=TwoWay}"
            ShowRowsCount="True"
            ShowStatusBar="True"
            FilterLanguage="English"
            RowHeight="22"
            FontSize="11"
            ColumnHeaderHeight="28"
            Margin="0"
            AlternationCount="2"
            RowBackground="White"
            AlternatingRowBackground="#F8F9FB"
            ColumnHeaderStyle="{StaticResource HeaderStyle}"
            RowStyle="{StaticResource RowStyle}"
            CanUserResizeColumns="True"
            CanUserSortColumns="True"
            Grid.Column="0">
            <control:FilterDataGrid.Columns>
                <control:DataGridTextColumn Header="BOM No." Binding="{Binding PROJECTNO}" Width="110" IsColumnFiltered="True">
                    <control:DataGridTextColumn.ElementStyle>
                        <Style TargetType="{x:Type TextBlock}" BasedOn="{StaticResource CellTextStyle}">
                            <Setter Property="FontWeight" Value="Bold"/>
                            <Setter Property="Foreground" Value="Black"/>
                        </Style>
                    </control:DataGridTextColumn.ElementStyle>
                </control:DataGridTextColumn>

                <control:DataGridTextColumn Header="Customer" Binding="{Binding Customer}" Width="250" IsColumnFiltered="True" ElementStyle="{StaticResource CellTextStyle}" />

            </control:FilterDataGrid.Columns>
        </control:FilterDataGrid>

        <!-- Splitter -->
        <GridSplitter Grid.Column="1" Width="10" Background="#ddd" HorizontalAlignment="Center" VerticalAlignment="Stretch" />

        <!-- Details and StockIn Panel -->
        <Grid Grid.Column="2" Margin="0">
            <Grid.RowDefinitions>
                <RowDefinition Height="20"/>
                <RowDefinition/>
                <RowDefinition Height="Auto"/>
            </Grid.RowDefinitions>


            <!-- Details DataGrid -->


            <!-- Details DataGrid -->
            <DockPanel Grid.Row="0" HorizontalAlignment="Right">

                <CheckBox x:Name="SelectAllFilteredCheckBox" Content="Select all-Filtered" Width="130" VerticalAlignment="Center" Click="SelectAllFilteredCheckBox_Click"/>
                <Button Content="Create Job Card" Background="#007AFF" Foreground="White" FontWeight="SemiBold" BorderThickness="0" Cursor="Hand"  DockPanel.Dock="Right" Width="86" Margin="0,0,50,0" Click="CreateJobCard_Click"/>
            </DockPanel>


            <!-- Details DataGrid -->
            <control:FilterDataGrid 
    x:Name="WIDBOMDG"
    ItemsSource="{Binding PlanningSideDgList}" 
    SelectedItem="{Binding SelectedBOM, Mode=TwoWay}"
    SelectionMode="Single"
    AutoGenerateColumns="False" 
    CanUserAddRows="False"
    ShowRowsCount="True"
    ShowStatusBar="True"
    FilterLanguage="English"
    RowHeight="22"
    FontSize="11"
    ColumnHeaderHeight="28"
    AlternationCount="1"
    RowBackground="White"
    AlternatingRowBackground="#F8F9FB"
    ColumnHeaderStyle="{StaticResource HeaderStyle}"
    RowStyle="{StaticResource RowStyle}"
    CanUserResizeColumns="True"
    CanUserSortColumns="True"
    Margin="0,10,0,12" Grid.Row="1">

                <control:FilterDataGrid.Columns>
                    <control:DataGridTextColumn Header="WID" Binding="{Binding WID}" Width="100" IsColumnFiltered="True" ElementStyle="{StaticResource CellTextStyle}" />
                    <control:DataGridTextColumn Header="Description" Binding="{Binding Description}" Width="300" IsColumnFiltered="True" ElementStyle="{StaticResource CellTextStyle}" />
                    <control:DataGridTextColumn Header="Assigned" Binding="{Binding Assigned}" Width="110" IsColumnFiltered="True" ElementStyle="{StaticResource CellTextStyle}" />
                    <control:DataGridTextColumn Header="BOM Qty" Binding="{Binding BOMQty}" Width="110" IsColumnFiltered="True" ElementStyle="{StaticResource CellTextStyle}" />
                    <control:DataGridTextColumn Header="Process" Binding="{Binding Process}" Width="100" IsColumnFiltered="True" ElementStyle="{StaticResource CellTextStyle}" />
                    <control:DataGridTextColumn Header="Job card" Binding="{Binding Jobcard}" Width="100" IsColumnFiltered="True" ElementStyle="{StaticResource CellTextStyle}" />
                    <control:DataGridTextColumn Header="Colour" Binding="{Binding Colour}" Width="90" IsColumnFiltered="True" ElementStyle="{StaticResource CellTextStyle}" />
                    <control:DataGridTextColumn Header="Packing Balance" Binding="{Binding PackingBalance}" Width="90" IsColumnFiltered="True" ElementStyle="{StaticResource CellTextStyle}" />
                    <control:DataGridTextColumn Header="Dispatched Qty" Binding="{Binding DispatchQty}" Width="110" IsColumnFiltered="True" ElementStyle="{StaticResource CellTextStyle}" />
                    <control:DataGridTextColumn Header="Dispatch Date" Binding="{Binding DispatchDate, StringFormat=\{0:dd-MM-yyyy\}}" Width="110" IsColumnFiltered="True" ElementStyle="{StaticResource CellTextStyle}" />
                    <control:DataGridTextColumn Header="Dispatch Pending" Binding="{Binding DispatchPending}" Width="110" IsColumnFiltered="True" />


                    <control:DataGridTemplateColumn Header="Create Job" Width="80">
                        <control:DataGridTemplateColumn.CellTemplate>
                            <DataTemplate>
                                <CheckBox 
                Content="Job Card"
                IsChecked="{Binding IsSelectedToCreate, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}"
                Visibility="{Binding Jobcard, Converter={StaticResource JobCardToEnabledConverter}}"
                VerticalAlignment="Center"
                Padding="2,2"/>
                            </DataTemplate>
                        </control:DataGridTemplateColumn.CellTemplate>
                    </control:DataGridTemplateColumn>

                </control:FilterDataGrid.Columns>
            </control:FilterDataGrid>
            <Grid x:Name="___Grid__3rd" Grid.Row="2">

                <Grid.ColumnDefinitions>
                    <ColumnDefinition/>
                    <ColumnDefinition Width="Auto" MinWidth="150"/>

                </Grid.ColumnDefinitions>

                <control:FilterDataGrid 
                    x:Name="JobcardDG"
                    ItemsSource="{Binding JobCardList}"
                    AutoGenerateColumns="False"    
                    ShowRowsCount="True"
                    CanUserAddRows="False"
                    ShowStatusBar="True"
                    FilterLanguage="English"
                    RowHeight="22"
                    FontSize="11"
                    ColumnHeaderHeight="28"
                    AlternationCount="2"
                    RowBackground="White"
                    AlternatingRowBackground="#F8F9FB"
                    ColumnHeaderStyle="{StaticResource HeaderStyle}"
                    RowStyle="{StaticResource RowStyle}"
                    CanUserResizeColumns="True"
                    CanUserSortColumns="True" Margin="0,0,10,0">

                    <control:FilterDataGrid.Columns>
                        <control:DataGridTextColumn Header="Seq." Binding="{Binding OP_Sequence}" Width="60" IsColumnFiltered="True" ElementStyle="{StaticResource CellTextStyle}" />
                        <control:DataGridTextColumn Header="Job Card" Binding="{Binding JC_no}" Width="150" IsColumnFiltered="True" ElementStyle="{StaticResource CellTextStyle}" />
                        <control:DataGridTextColumn Header="WID" Binding="{Binding WID}" Width="100" IsColumnFiltered="True" ElementStyle="{StaticResource CellTextStyle}" />
                        <control:DataGridTextColumn Header="Operation" Binding="{Binding Operation_ID}" Width="100" IsColumnFiltered="True" ElementStyle="{StaticResource CellTextStyle}" />
                        <control:DataGridTextColumn Header="Created On" Binding="{Binding Created_date}" Width="100" IsColumnFiltered="True" ElementStyle="{StaticResource CellTextStyle}" />
                        <control:DataGridTextColumn Header="Created by" Binding="{Binding Created_by}" Width="100" IsColumnFiltered="True" ElementStyle="{StaticResource CellTextStyle}" />
                    </control:FilterDataGrid.Columns>
                </control:FilterDataGrid>




                <Border Background="White" CornerRadius="6" Padding="16" BorderBrush="#D1D9E6" BorderThickness="1" Margin="0,0,0,0" Grid.Column="1">
                    <StackPanel>
                        <TextBlock Text="Project Details" FontWeight="SemiBold" FontSize="13" Foreground="#222" Margin="0,0,0,12" />

                        <Grid>
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="110"/>
                                <ColumnDefinition Width="*"/>
                            </Grid.ColumnDefinitions>
                            <Grid.RowDefinitions>
                                <RowDefinition Height="Auto"/>
                                <RowDefinition Height="Auto"/>
                                <RowDefinition Height="Auto"/>
                                <RowDefinition Height="Auto"/>
                                <RowDefinition Height="Auto"/>
                            </Grid.RowDefinitions>



                            <TextBlock Text="PO Date:" Grid.Row="2" Grid.Column="0" VerticalAlignment="Center" FontWeight="SemiBold" Margin="0,0,8,8"/>
                            <DatePicker Grid.Row="2" Grid.Column="1" Width="150" FontSize="12" Margin="0,0,0,8"/>

                            <TextBlock Text="PO Date:" Grid.Row="3" Grid.Column="0" VerticalAlignment="Center" FontWeight="SemiBold" Margin="0,0,8,8"/>
                            <DatePicker Grid.Row="3" Grid.Column="1" Width="150" FontSize="12" Margin="0,0,0,8"/>

                            <Button Content="Apply" Grid.Row="4" Grid.Column="1" Width="80" Height="30" Margin="0,12,0,0" Background="#007AFF" Foreground="White" FontWeight="SemiBold" HorizontalAlignment="Left" BorderThickness="0" Cursor="Hand"  />
                            <Button Content="Delete Jobs" Grid.Row="4" Grid.Column="0" Width="80" Height="30" Margin="0,12,0,0" Background="red" Foreground="White" FontWeight="SemiBold" HorizontalAlignment="Left" BorderThickness="0" Cursor="Hand" Click="DeleteJobCard_Click"/>

                        </Grid>


                    </StackPanel>
                </Border>
            </Grid>

        </Grid>
    </Grid>
</Page>
