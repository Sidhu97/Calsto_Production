<Page
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:control="clr-namespace:FilterDataGrid;assembly=FilterDataGrid"
      xmlns:av="http://schemas.microsoft.com/expression/blend/2008" xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" mc:Ignorable="av" x:Class="Dashboard"
      Title="Dashboard" Background="#FAFAFA" FontFamily="Segoe UI" FontSize="11" Height="633">

    <Page.Resources>
        <!-- Header style -->
        <Style x:Key="HeaderStyle" TargetType="DataGridColumnHeader">
            <Setter Property="FontWeight" Value="SemiBold"/>
            <Setter Property="FontSize" Value="11"/>
            <Setter Property="Background" Value="#F5F7FA"/>
            <Setter Property="Foreground" Value="#333"/>
            <Setter Property="HorizontalContentAlignment" Value="Left"/>
            <Setter Property="Padding" Value="8,4"/>
            <Setter Property="BorderThickness" Value="0,0,0,1"/>
            <Setter Property="BorderBrush" Value="#DBE2E8"/>
        </Style>

        <!-- Row style without unconditional background -->
        <Style x:Key="RowStyle" TargetType="DataGridRow">
            <Setter Property="FontSize" Value="11"/>
            <Setter Property="Foreground" Value="#222"/>
            <Setter Property="MinHeight" Value="22"/>
            <Setter Property="Padding" Value="6,2"/>
            <Style.Triggers>
                <Trigger Property="IsSelected" Value="True">
                    <Setter Property="Background" Value="LightBlue"/>
                    <Setter Property="Foreground" Value="White"/>
                </Trigger>
                <Trigger Property="IsMouseOver" Value="True">
                    <Setter Property="Background" Value="LightBlue"/>
                </Trigger>
            </Style.Triggers>
        </Style>

        <!-- Cell text style with trimming -->
        <Style x:Key="CellTextStyle" TargetType="TextBlock">
            <Setter Property="Padding" Value="6,0"/>
            <Setter Property="VerticalAlignment" Value="Center"/>
            <Setter Property="TextTrimming" Value="CharacterEllipsis"/>
            <Setter Property="Foreground" Value="#444"/>
        </Style>

        <!-- Highlight blue for ProjectStatus Open -->
        <Style x:Key="ProjectStatusStyle" TargetType="TextBlock" BasedOn="{StaticResource CellTextStyle}">
            <Style.Triggers>
                <DataTrigger Binding="{Binding ProjectStatus}" Value="OPEN">
                    <Setter Property="Foreground" Value="orange"/>
                    <Setter Property="FontWeight" Value="Bold"/>
                </DataTrigger>
                <DataTrigger Binding="{Binding ProjectStatus}" Value="HOLD">
                    <Setter Property="Foreground" Value="RED"/>
                    <Setter Property="FontWeight" Value="SemiBold"/>
                </DataTrigger>
                <DataTrigger Binding="{Binding ProjectStatus}" Value="CLOSED">
                    <Setter Property="Foreground" Value="PURPLE"/>
                    <Setter Property="FontWeight" Value="SemiBold"/>
                </DataTrigger>
            </Style.Triggers>
        </Style>
    </Page.Resources>

    <Grid Margin="16">
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="5*"/>
            <ColumnDefinition Width="10"/>
            <ColumnDefinition Width="*"/>
        </Grid.ColumnDefinitions>

        <control:FilterDataGrid  x:Name="dataGrid" ItemsSource="{Binding OperationsList}"
                                 AutoGenerateColumns="False"
                                 SelectedItem="{Binding SelectedOperation, Mode=TwoWay}"
                                 ShowRowsCount="True"
                                 ShowStatusBar="True"
                                 FilterLanguage="English"
                                 RowHeight="22"
                                 FontSize="11"
                                 ColumnHeaderHeight="28"
                                 Margin="10,10,0,10"
                                 AlternationCount="2"
                                 RowBackground="White"
                                 AlternatingRowBackground="#F8F9FB"
                                 CanUserResizeColumns="True"
                                 CanUserSortColumns="True"
                                 Grid.Column="0">
            <control:FilterDataGrid.Columns>
                <control:DataGridTextColumn Header="BOM No." Binding="{Binding BOMNo}" Width="110" IsColumnFiltered="True">
                    <control:DataGridTextColumn.ElementStyle>
                        <Style TargetType="TextBlock" BasedOn="{StaticResource CellTextStyle}">
                            <Setter Property="FontWeight" Value="Bold"/>
                            <Setter Property="Foreground" Value="Black"/>
                        </Style>
                    </control:DataGridTextColumn.ElementStyle>
                </control:DataGridTextColumn>
                <control:DataGridTextColumn Header="Customer" Binding="{Binding CustomerName}" Width="150" IsColumnFiltered="True" ElementStyle="{StaticResource CellTextStyle}" />
                <control:DataGridTextColumn Header="Location" Binding="{Binding Location}" Width="120" IsColumnFiltered="True" ElementStyle="{StaticResource CellTextStyle}" />
                <control:DataGridTextColumn Header="PO No" Binding="{Binding PONo}" Width="110" IsColumnFiltered="True" ElementStyle="{StaticResource CellTextStyle}" />
                <control:DataGridTextColumn Header="Booking Date" Binding="{Binding BookingDate, StringFormat=\{0:dd-MM-yyyy\}}" Width="110" IsColumnFiltered="True" ElementStyle="{StaticResource CellTextStyle}" />
                <control:DataGridTextColumn Header="Sales" Binding="{Binding Sales}" Width="100" IsColumnFiltered="True" ElementStyle="{StaticResource CellTextStyle}" />
                <control:DataGridTextColumn Header="Total WIDs" Binding="{Binding TotalWIDs}" Width="90" IsColumnFiltered="True" ElementStyle="{StaticResource CellTextStyle}" />
                <control:DataGridTextColumn Header="Pending WIDs" Binding="{Binding PendingWIDs}" Width="90" IsColumnFiltered="True" ElementStyle="{StaticResource CellTextStyle}" />
                <control:DataGridTextColumn Header="PO Dispatch Date" Binding="{Binding PODispatchDate, StringFormat=\{0:dd-MM-yyyy\}}" Width="110" IsColumnFiltered="True" ElementStyle="{StaticResource CellTextStyle}" />
                <control:DataGridTextColumn Header="Dispatch Date" Binding="{Binding DispatchDate, StringFormat=\{0:dd-MM-yyyy\}}" Width="110" IsColumnFiltered="True" ElementStyle="{StaticResource CellTextStyle}" />
                <control:DataGridTextColumn Header="Project Status" Binding="{Binding ProjectStatus}" Width="110" IsColumnFiltered="True" ElementStyle="{StaticResource ProjectStatusStyle}" />
                <control:DataGridTextColumn Header="Due Date" Binding="{Binding DueDate}" Width="80" IsColumnFiltered="True" ElementStyle="{StaticResource CellTextStyle}" />
            </control:FilterDataGrid.Columns>
        </control:FilterDataGrid>

        <GridSplitter Grid.Column="1" Width="10" Background="#ddd" HorizontalAlignment="Center" VerticalAlignment="Stretch" />

        <!-- Details and StockIn Panel -->
        <Grid Grid.Column="2" Margin="0">
            <Grid.RowDefinitions>
                <RowDefinition/>
                <RowDefinition Height="0.5*"/>
            </Grid.RowDefinitions>

            <!-- Details DataGrid -->
            <DataGrid ItemsSource="{Binding FilteredDetailsList}" 
                      AutoGenerateColumns="False" 
                      CanUserAddRows="False" 
                      IsReadOnly="True" 
                      FontSize="11" 
                      RowHeight="22" 
                      ColumnHeaderHeight="28" 
                      AlternatingRowBackground="#F8F9FB" 
                      HeadersVisibility="Column" 
                      Margin="0,0,0,12">
                <DataGrid.Columns>
                    <DataGridTextColumn Header="Field" Binding="{Binding Field}" Width="*" />
                    <DataGridTextColumn Header="Description" Binding="{Binding Detail}" Width="2*" />
                </DataGrid.Columns>
            </DataGrid>

            <!-- Stock IN Transaction Panel -->
            <Border Background="White" CornerRadius="6" Padding="16" BorderBrush="#D1D9E6" BorderThickness="1" Grid.Row="1">
                <StackPanel>
                    <TextBlock Text="Project Details" FontWeight="SemiBold" FontSize="13" Foreground="#222" Margin="0,0,0,12" />

                    <Grid>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="110"/>
                            <ColumnDefinition Width="*"/>
                        </Grid.ColumnDefinitions>
                        <Grid.RowDefinitions>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="Auto"/>
                        </Grid.RowDefinitions>



                        <TextBlock Text="PO Date:" Grid.Row="2" Grid.Column="0" VerticalAlignment="Center" FontWeight="SemiBold" Margin="0,0,8,8"/>
                        <DatePicker Grid.Row="2" Grid.Column="1" Width="150" FontSize="12" Margin="0,0,0,8" SelectedDate="{Binding SelectedOperation.PODispatchDate, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}"/>

                        <TextBlock Text="PO Date:" Grid.Row="3" Grid.Column="0" VerticalAlignment="Center" FontWeight="SemiBold" Margin="0,0,8,8"/>
                        <DatePicker Grid.Row="3" Grid.Column="1" Width="150" FontSize="12" Margin="0,0,0,8"/>

                        <Button Content="Apply" Grid.Row="4" Grid.Column="1" Width="80" Height="30" Margin="0,12,0,0" Background="#007AFF" Foreground="White" FontWeight="SemiBold" HorizontalAlignment="Left" BorderThickness="0" Cursor="Hand" Command= "{Binding POdateApplyCommand}" />
                        <Button Content="Hold/Cancel" Grid.Row="4" Grid.Column="0" Width="80" Height="30" Margin="0,12,0,0" Background="red" Foreground="White" FontWeight="SemiBold" HorizontalAlignment="Left" BorderThickness="0" Cursor="Hand" />

                    </Grid>


                </StackPanel>
            </Border>
        </Grid>
    </Grid>
</Page>