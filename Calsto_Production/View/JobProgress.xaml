<Window x:Class="JobProgress"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        WindowStyle="None" ResizeMode="NoResize" AllowsTransparency="True" 
        Background="Transparent" Width="350" Height="120"
        WindowStartupLocation="CenterScreen" Topmost="True">

    <Border Background="White" CornerRadius="10" Padding="20">
        <StackPanel>
            <TextBlock Text="Creating Job Cards..." 
                       FontSize="16" HorizontalAlignment="Center" Margin="0,0,0,10"/>
            <ProgressBar x:Name="LoadingBar" Height="20" Minimum="0" Maximum="100" />
            <TextBlock x:Name="StatusText" 
                       FontSize="14" HorizontalAlignment="Center" Margin="0,10,0,0" />
        </StackPanel>
    </Border>
</Window>
